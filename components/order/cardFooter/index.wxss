.order-card-footer {
    padding: 0 35rpx;
}

.order-card-footer .header {
    text-align: right;
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.order-card-footer .header .number {
    font-size: 32rpx;
    color: #333333;
    display: block;
}

.order-card-footer .header .price-desc {
    font-size: 32rpx;
    line-height: 32rpx;
    color: #333333;
    display: block;
    margin-left: 20rpx;
}

.order-card-footer .header .price {
    font-size: 37rpx;
    line-height: 37rpx;
    color: #333333;
    font-weight: bold;
    display: block;
}

.order-card-footer .footer {
    border-top: 1rpx solid #F8F8F8;
    display: flex;
    justify-content: flex-end;
    padding: 20rpx 0;
}
.order-card-footer .footer .btn{
    display: flex;
    text-align: center;
    font-size: 32rpx;
    border-radius: 100rpx;
    padding: 15rpx 40rpx;
    margin-left: 20rpx;
}
.order-card-footer .footer .btn.btn-danger{
    border:1rpx solid #ff4400;
    color: #ff4400;
}
