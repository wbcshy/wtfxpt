
.detail{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.mod_slider{
  width: 100%; 
  background: #fff;
  box-sizing: border-box;
  border-top: 2rpx solid #e8e8ed;
  border-bottom: 2rpx solid #e8e8ed; 
}
.swiper-item{
  width: 100%;
}
.buy_area{
  box-sizing: border-box;
  width: 100%;
  padding-bottom: 120rpx;
}
.textWrap{
  background: #fff;
  padding: 20rpx;
}
.textWrap text {
  color: #333;
  overflow: hidden;
  font-size: 32rpx;
  font-weight: 500;
}
.priceWrap{
  background: #fff;
  padding: 20rpx;
  display: flex;
}
.priceWrap .item-cur-price{
  font-size: 36rpx;
  color: #e4393c;
  font-weight: 700;
}
.priceWrap .item-origin-price{
  font-size: 26rpx;
  color: #999;
  font-weight: 500;
  text-decoration: line-through;
  margin-left: 15px;
}
.hot-info {
  float: left;
  align-items: center;
}
.hot-info image {
  float: right;
  width: 45rpx;
  height:45rpx;
}
.hot-info .hot-text {
  float: right;
  background: #FFE4E1;
  font-size: 22rpx;
  color: #FF6A6A;
  width: 120px;
  height: 45rpx;
  line-height: 45rpx;
  border-radius: 10px;
  text-align: center;
}
.sold-info {
  background: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}
.sold-info text {
  font-size: 26rpx;
  color: #999;
  font-weight: 500;
}
.desc-info {
  background: #fff;
  padding: 20rpx;
  display: flex;
}
.desc-info .desc-text {
  background: #FFE4E1;
  font-size: 22rpx;
  color: #FF6A6A;
  margin-right: 10px;
  padding: 10rpx;
}
.qun-info {
  background: #fff;
  padding: 20rpx;
  display: flex;
  border-top: 1px solid #eee;
  align-items: center;
}
.qun-image {
  width: 15%;
}
.qun-image image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1rpx solid #f1f1f1;
}
.qun-word {
  width: 65%;
  display: flex;
  flex-flow: column;
  
}
.qun-word .qun-title {
  font-size: 19px;
}
.qun-word .qun-desc {
  font-size: 14px;
  color: #999;
}
.qun-btn-add {
  width: 20%;
}
.qun-btn-add button {
  background: #66CD00;
  width: 110rpx;
  height: 60rpx;
  font-size: 15px;
  color: #fff;
  line-height: 60rpx;
}
.merchant-info {
  display: flex;
  flex-flow: column;
  padding: 20rpx;
  background: #fff;
}
.merchant-title {
  margin: auto;
  font-size: 16px;
  font-weight: 600;
}
.merchant-line {
  margin: 10px auto;
  height: 4px;
  width: 30px;
  background: #f56c6c;
  border-radius: 10px;
}
.merchant-name {
  margin-top: 10px;
  font-size: 16px;
}
.merchant-time {
  margin-top: 10px;
  font-size: 14px;
  color: #999;
}
.merchant-phone {
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
}
.merchant-phone text {
  font-size: 14px;
  color: #999;
}
.merchant-phone .call-phone {
  width: 48px;
  height: 21px;
  font-size: 14px;
  background: #FF3030;
  line-height: 21px;
  color: #fff;
  text-align: center;
  border-radius: 8px;
}
.merchant-address {
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
}
.merchant-address text{
  font-size: 14px;
  color: #999;
}
.merchant-address .navigation {
  width: 48px;
  height: 21px;
  font-size: 14px;
  background: #FF3030;
  line-height: 21px;
  color: #fff;
  text-align: center;
  border-radius: 8px;
}
.purchase-info {
  display: flex;
  background: #fff;
  padding: 20rpx;
  flex-flow: column;
}
.purchase-detail {
  display: flex;
  flex-flow: column;
}
.purchase-detail text {
  margin-top: 8px;
  font-size: 14px;
}
.comment-info {
  display: flex;
  background: #fff;
  padding: 20rpx;
  flex-flow: column;
}
.comment-list {
  display: flex;
  flex-flow: column;
}
.comment-detail {
  display: flex;
  flex-flow: column;
  margin-top: 20px;
}
.comment-top-info {
  display: flex;
}
.comment-top-info .user-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1rpx solid #f1f1f1;
}
.comment-user .user-name {
  font-size: 12px; 
}
.comment-user .date {
  font-size: 12px;
  color: #999;
}
.good-comment {
  display: flex;
  font-size: 12px;
  align-items: center;
}
.good-comment image {
  width: 30rpx;
  height: 30rpx;
}
.comment-down-info {
  display: flex;
}
.comment-down-info .comment-content {
  font-size: 12px;
}
.get-more-comment {
  margin:20px auto;
  font-size: 14px;
  color: #FF3030;
}
.item-show-info {
  display: flex;
  flex-flow: column;
  background: #fff;
  padding: 20rpx;
}
.item-show-img {
  display: flex;
  flex-flow: column;
  width: 100%;
}
.item-show-img image {
  width: 100%;
}
.price-desc-info {
  display: flex;
  flex-flow: column;
  padding: 20rpx;
}
.price-desc-info .price-desc {
  display: flex;
  flex-flow: column;
  
}
.price-desc-info .price-desc text {
  margin-top: 15px;
  font-size: 14px;
  color: #999;
}
.item-recommend-info {
  display: flex;
  flex-flow: column;
  padding: 20rpx;
  background: #fff;
}
.btn_bar{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  background-color: hsla(0,0%,100%,.95);
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border-top: 2rpx solid #e8e8ed;
}

.icon_cart{
  position: relative;
  width: 16%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #666;
}
.icon_cart image {
  width: 40rpx;
  height: 40rpx;
}
.cart_btn{
  width: 26%;
}
.cart_btn button {
  border: none;
  outline: none;
  background-color: #e4393c;
  color: #fff;
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0;
}


.canvas{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 999999rpx;     
  background-color: rgba(0,0,0,0.3)
}
 
.preview{
  position:fixed;
  top:0;
  left:0;
  width:100vw;
  height:100vh;
  background-color:rgba(0,0,0,0.8);
  z-index: 2;
  text-align: center;
  display:flex; 
  flex-flow:column;
}
 
.preview image{
  width: 80%;
  height: 80%;
  margin: 10%;
  margin-bottom: 5%;
}
 
.preview button{
  margin:0 10rpx;
  border-radius:50px;
  background-color:#e4393c;
  width:25%;
}
