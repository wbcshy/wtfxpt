  align-items: center;
  font-size: 10px;
  color: #999;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.link-icon image {
  width: 80rpx;
  height: 70rpx;
  margin: auto;
}

.fstart_p {
