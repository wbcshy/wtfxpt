/**黑金主题卡片开始*/
.card-header {
  background: #393C43;
  width: 100%;
  height: 350rpx;
  padding-top: 50rpx;
}
.card {
  width: 680rpx;
  height: 350rpx;
  background-image: url('https://wtfxpt.bcwgel.com/themes/my/bg-1.png');
  background-size:110% 110%; 
  -moz-background-size:110% 110%;
  position: relative;
  display: -webkit-flex;
  display: flex;
  flex-flow: column;
  margin: 0 auto;
  border-top-left-radius: 5%;
  border-top-right-radius: 5%;
}
.person {
  display: flex;
  justify-content: space-between;
}
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 120rpx;  
  height: 120rpx;  
  margin: 30rpx 0 0 30rpx;
  border-radius: 50%;   
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  

.person-info {
  width: 510rpx;
  height: 150rpx;
  display: flex;
  flex-flow: column;
  justify-content: center;

}

.invite-code {
  display: flex;
  align-items: center;
}
.invite-code text {
  font-size: 29rpx;
}
.copy-button {
  margin-left: 10rpx;
}
.invite-code .button {
  font-size: 22rpx;
  background: #FBF7E7;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 30rpx;
  text-align: center;
}
.horizontal-line {
  width: 620rpx;
  height: 2rpx;
  background: #FBF7E7;
  opacity: 0.7;
  margin: 30rpx auto;
  
}
.withdraw {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.money-info {
  display: flex;
  flex-flow: column;
  align-items: center;
  font-size: 24rpx;
  margin-left: 30rpx;
}
.available-money {
  font-size: 50rpx;
  font-weight: 700;
}
.withdraw-button {
  font-size: 38rpx;
  background: #FBF7E7;
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 70rpx;
  text-align: center;
  margin-right: 30rpx;
}
.level {
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.level image {
  width: 45rpx;
  height: 45rpx
}

.distribution-data {
  background: #313340;
  width: 100%;
  height: 90rpx;
  padding: 30rpx;
  display: flex;
}

.money-data {
  display: flex;
  flex-flow: column;
  align-items: center;
  color: #fff;
  width: 146rpx;
}
.money-data-content {
  font-size: 26rpx;
  font-weight: 700;
}
.money-data text {
  font-size: 21rpx;
  margin-top: 10rpx;
}
.vertical-line {
  width: 1rpx;
  height: 40rpx;
  background: #ffffff;
  margin: 15rpx 15rpx;
}

/**黑金主题卡片结束*/
