page {
  background: #F5F3F6;
}
.header {
  background: #FD3047;
  height: 180rpx;
  display: flex;
  padding: 20rpx 45rpx;
  align-items: center;
  justify-content: space-between;
}
.header-container {
  display: flex;
  flex-flow: column;
  align-items: center;
}
.header-container image {
  width: 50rpx;
  height: 50rpx;
}
.header-container text {
  margin-top: 10rpx;
  font-size: 38rpx;
  color: #ffffff;
}
.today {
  background: #ffffff;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}
.today-cell {
  display: flex;
  flex-flow: column;
  align-items: center;
  width: 249rpx;
  height: 110rpx;
  padding: 20rpx 0;
}
.data-result {
  font-size: 35rpx;
  font-weight: 700;
}
.data-title {
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #999999;
}
.ho-line {
  width: 1rpx;
  height: 110rpx;
  background: #eee;
  margin: 20rpx 0;
}
.ver-line {
  width: 100%;
  height: 1rpx;
  background: #eee;
}
.total {
  margin: 30rpx 0;
  background: #ffffff;
  height: 220rpx;
  width: 100%;
  display: flex;
}
.total-cell {
  display: flex;
  align-items: center;
  width: 374rpx;
  padding: 35rpx;
}
.cell-img {
  width: 100rpx;
  height: 180rpx;
}
.cell-img image {
  width: 90rpx;
  height: 90rpx;
  margin: 40rpx 0;
}
.cell-word {
  display: flex;
  flex-flow: column;
  height: 140rpx;
  margin: 40rpx 20rpx;
  justify-content: space-between;
}
.price-word {
  font-size: 24rpx;
}
.price-num {
  font-size: 40rpx;
  color: #F7A002;
}
.customer-num {
  font-size: 40rpx;
  color: #54BBFE;
}
.word-text {
  font-size: 32rpx;
  color: #999999;
}
.total-line {
  height: 140rpx;
  width: 2rpx;
  background: #eee;
  margin: 40rpx 0;
}