page {
  background-color: #f6f6f6;
}

.control {
  display: flex;
  flex-flow: column;
  
}
.control-header {
  margin-bottom:30rpx; 
  display: flex;
  justify-items: center;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 15rpx;
}

.data-container {
  padding: 30rpx 0;
  width: 230rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  text-align: center;
}
.data-result {
  font-size: 32rpx;
  font-weight: 700;
}
.data-title {
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #999;
}
.data-price {
  font-size: 32rpx;
  font-weight: 700;
  color: red;
}
.canvas-container {
  width: 100%;
  background: #ffffff;
  padding: 30rpx 0;
}
.panel {
  display: block;
  margin-top: 10px;
}

.panel .chart-with-img {
  display: inline-block;
  width: 25%;
  margin: 10px 4%;
  text-align: center;
}

.chart-with-img image {
  box-sizing: border-box;
  width: 100%;
  height: 100px; 
  padding: 20px;
  background-color: #f3f3f3;
  border: 1px solid #eee;
  display: block;
  margin: 0 auto;
  margin-bottom: 10px;
}

.chart-without-img {
  display: block;
  width: 92%;
  margin: 10px 4%;
  border: none;
  border-radius: 0;
}

.chart-without-img button {
  text-align: left;
}
.panel-title {
  font-size: 40rpx;
  font-weight: 700;
  margin: 0 27rpx;

}