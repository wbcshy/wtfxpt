page {
  background-color: #f6f6f6;
}
.canvas-containers {
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
ec-canvas {
  width: 100%;
  height: 100%;
  background: #ffffff;
}
.control {
  display: flex;
  flex-flow: column;
  
}
.control-header {
  margin-bottom:30rpx; 
  display: flex;
  justify-items: center;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 15rpx;
}

.data-container {
  padding: 30rpx 0;
  width: 230rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  text-align: center;
}
.data-result {
  font-size: 32rpx;
  font-weight: 700;
}
.data-title {
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #999;
}
.data-price {
  font-size: 32rpx;
  font-weight: 700;
  color: red;
}
.canvas-container {
  width: 100%;
  background: #ffffff;
  padding: 30rpx 0;
}