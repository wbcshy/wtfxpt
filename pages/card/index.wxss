/* pages/cart/index.wxss */

.cart {
  display: flex;
  flex-direction: column;
  height: 100%;
}

page {
  background-color: #f8f8f8;
}

.cart-list {
  display: flex;
  background: #fff;
  margin: 2px 0;
}

.cart-list-checkbox {
  width: 100rpx;
}

.cart-list-image image {
  display: block;
  overflow: hidden;
  width: 80px;
  height: 80px;
}
.good_info{
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.good_title{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 10rpx 0;
  font-size: 28rpx;
}
.good_price{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 10px;
}
.good_price .price{
  line-height: 40rpx;
  color: #e4393c;
  font-size: 30rpx;
}

.fixBar{
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  background: #fff;
  border-top: 2rpx solid #e8e8ed;
  color: #333;
  font-size: 28rpx;
  z-index: 99;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 90rpx;
}
.select-all-checkbox {
  line-height: 100rpx;
  margin-left:10px;
}
.total{
  box-sizing: border-box;
  line-height: 100rpx;
  font-size: 32rpx;
  text-align: center;
  
}
.total .money{
  color: #e4393c;
  font-weight: 700;
}
.btn_amount{
  display: flex;
}
.btn_amount .btn-blue{
  background: #4495E6;
  color: #fff;
  font-size: 28rpx;
  height: 100rpx;
  border: none;
  border-radius: 0;
  line-height: 90rpx;
  width: 180rpx;
}

.btn_amount .btn-red{
  background: #FF4D49;
  color: #fff;
  font-size: 28rpx;
  height: 100rpx;
  border: none;
  border-radius: 0;
  line-height: 90rpx;
  width: 180rpx;
}

/*  重写 checkbox 样式  */

/* 未选中的 背景样式 */

checkbox .wx-checkbox-input {
  border-radius: 50%; /* 圆角 */
  width: 40rpx; /* 背景的宽 */
  height: 40rpx; /* 背景的高 */
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: none;
  background: red;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.cart_checkbox {
  margin-left:10px;
  height: 90px;
  line-height: 90px;
}
