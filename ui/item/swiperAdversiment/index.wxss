.width-100 {
  width: 100%;
}
.bp-swiper {
  padding: 35rpx;
  height: 620rpx;
}
.bp-image-content {
  height:420rpx;
}
.bp-image-content image {
  height: 400rpx;
  width: 680rpx;
}
.my-self-price {
  display: flex;
  align-items: center;
}
.totay-item-desc {
  text-align: left;
  font-size: 33rpx;
  width: 680rpx;
  height: 88rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.totay-item-info {
  display: flex;
  width: 680rpx;
  height: 88rpx;
  justify-content: space-between;
  align-items: center;
}
.item-price {
  font-size: 40rpx;
  color: red;
  font-weight: 700;
}
.item-origin-price {
  font-size: 30rpx;
  color: #999;
  text-decoration: line-through;
}

.item-soldnum {
  font-size: 30rpx;
  color: #999;
}
.bp-buy-icon {
  background: #E4393C;
  color: #fff;
  margin-right: 10rpx;
  font-size: 27rpx;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
}
